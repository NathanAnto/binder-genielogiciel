    "postinstall": "npm run init-db"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.7",
    "body-parser": "^1.20.3",
    "meteor-node-stubs": "^1.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/meteor": "^2.9.8",
    "@types/mocha": "^8.2.3",
    "@types/node": "^18.19.70",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^4.9.5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "testModule": "tests/main.ts"
